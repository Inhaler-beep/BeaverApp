<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/top_banner_linear"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bottom_round"
            android:elevation="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/hello"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/lightblue_background"
                    android:elevation="8dp">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/Username"
                       android:textColor="@color/white"
                       android:textStyle="bold"
                       android:textSize="16sp"
                       android:fontFamily="@font/poppins_medium"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="5dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/ripple_button"
                    android:src="@drawable/ic_menu"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:scaleType="fitEnd"
                        android:layout_height="wrap_content"
                        android:src="@drawable/homepage_picture"/>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/beginner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_banner_linear"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/Beginner"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/first_scroll_view"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1B00BCD4"
            android:layout_below="@id/beginner_title">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/first_card_view"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bottom_round"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:elevation="15dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_margin="10dp"
                            android:elevation="4dp"
                            android:layout_height="wrap_content"
                            android:background="@color/Seconday_main"
                            android:text="Lesson 1"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_semibold"/>

                        <TextView
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_height="wrap_content"
                            android:text="Introduction to Grammar"
                            android:textColor="@color/primary_variant"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_semibold"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/beginner_second_card"
                    android:layout_below="@+id/first_card_view"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"

                    android:background="@drawable/bottom_round"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:elevation="15dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_margin="10dp"
                            android:elevation="4dp"
                            android:layout_height="wrap_content"
                            android:background="@color/Seconday_main"
                            android:text="Lesson 2"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_semibold"/>

                        <TextView
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_height="wrap_content"
                            android:text="All About Tenses"
                            android:textColor="@color/primary_variant"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_semibold"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_below="@+id/beginner_second_card"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bottom_round"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:elevation="15dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_margin="10dp"
                            android:elevation="4dp"
                            android:layout_height="wrap_content"
                            android:background="@color/Seconday_main"
                            android:text="Lesson 3"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_semibold"/>

                        <TextView
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_height="wrap_content"
                            android:text="All About Tenses"
                            android:textColor="@color/primary_variant"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_semibold"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>




        </ScrollView>

        <TextView
            android:id="@+id/intermediate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_scroll_view"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/Intermediate"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ScrollView

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1B00BCD4"
            android:layout_below="@id/intermediate_title">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/second_card_view"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bottom_round"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:elevation="15dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@color/primary_yello"
                            android:elevation="4dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:padding="10dp"
                            android:text="Lesson 1"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_height="wrap_content"
                            android:text="Introduction to Grammar"
                            android:textColor="@color/primary_variant"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_semibold"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_below="@+id/second_card_view"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bottom_round"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:elevation="15dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_margin="10dp"
                            android:elevation="4dp"
                            android:layout_height="wrap_content"
                            android:background="@color/primary_yello"
                            android:text="Lesson 2"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_semibold"/>

                        <TextView
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_height="wrap_content"
                            android:text="All About Tenses"
                            android:textColor="@color/primary_variant"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins_semibold"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>




        </ScrollView>


    </RelativeLayout>


</FrameLayout>